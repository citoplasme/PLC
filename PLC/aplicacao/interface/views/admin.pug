doctype html
html
  head
    title UMinho ISN
    meta(charset="UTF-8")
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/style_back.css')
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Raleway')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
    style.
      body {
        background-color: #fefefe;
        background-image: url('images/fundo_inicial.png');
        background-size: cover;
        font-family: 'Raleway', sans-serif;;
        height: 100%;
        margin: 0;
      }
  body
    button.w3-btn.w3-large.w3-right.w3-charcoal.w3-section(style="position: absolute; right: 70px; top: 4px;" onclick="window.location.href = '/logout'")
        i(class="fa fa-power-off" style="color:#c0b283")
    .w3-display-middle
        .w3-container.w3-charcoal(style="box-shadow: 10px 10px 18px #373737;")
            .w3-margin.w3-padding-large
                img(src="/images/uminhoisn.png", style={height:'90px'}).w3-center
                .w3-center
                  form(method="get" action=`admin/exportar`)
                    button.w3-btn.w3-pale-gold.w3-section(style="width: 100%" type="submit") 
                      b Exportar
                  form(method="get" action=`admin/importar`)
                    button.w3-btn.w3-pale-gold.w3-section(style="width: 100%" type="submit") 
                      b Importar
                